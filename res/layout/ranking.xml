<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:id="@+id/layout" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/backgruond7">

<RelativeLayout android:layout_height="fill_parent" android:layout_width="fill_parent">
